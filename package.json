{
  "name": "auto-newsletter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" -- && npm run verify-build",
    "preview": "vite preview",
    "build-only": "vite build",
    "verify-build": "node -e \"const fs = require('fs'); const path = require('path'); const modulesDir = path.join('dist', 'modules'); if (!fs.existsSync(modulesDir)) { console.error('❌ ERROR: dist/modules folder does not exist!'); process.exit(1); } const files = fs.readdirSync(modulesDir); console.log('✅ dist/modules exists with', files.length, 'files'); files.forEach(f => console.log('  -', f));\"",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@primevue/themes": "^4.3.9",
    "@vue/server-renderer": "^3.5.21",
    "pinia": "^3.0.3",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.9",
    "quill": "^2.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@types/quill": "^2.0.14",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^4.0.15",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "happy-dom": "^20.0.11",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.0.4"
  }
}
